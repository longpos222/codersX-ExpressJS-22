extends ../layouts/common

block content
  if errors
    each error in errors
      p.alert.alert-danger= error

  form(action="/users", method="get")
    label(for='name') Name: 
    input#name(type="text", name="q", value=value)
    button(type="submit") Search user
  p Users List:
    ul
      each val in users
        li= `${val.name} ${val._id} ${val.email}`
          a(href=`/users/${val._id}/delete`) Delete
          a(href=`/users/${val._id}/update`) Update name
  nav
    ul.pagination
      if(pageFoot.prevPage != 0)
        li.page-item
          a.page-link(href="/users?page="+pageFoot.prevPage) &laquo;
      li.page-item
        a.page-link(href="/users?page="+pageFoot.page) Page #{pageFoot.page}
      if(pageFoot.nextPage != pageFoot.maxPage)
        li.page-item
          a.page-link(href="/users?page="+pageFoot.nextPage) &raquo;

  a.btn.btn-primary(href=`/users/add`) Add new user